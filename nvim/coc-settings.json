{
	"coc.preferences.useQuickfixForLocations": false,
	"coc.preferences.extensionUpdateCheck": "weekly",
	"diagnostic.maxWindowWidth": 100,
	"diagnostic.signPriority": 20,
	"diagnostic.errorSign": "",
	"diagnostic.warningSign": "",
	"diagnostic.infoSign": "",
	"diagnostic.hintSign": "",
	"diagnostic.enableHighlightLineNumber": false,
	"languageserver": {
		"lua": {
			"command": "lua-language-server",
			"filetypes": ["lua"],
			"rootPatterns": [".git/"],
			"settings": {
				"Lua": {
					"workspace": {
						"maxPreload": 2000,
						"preloadFileSize": 1000
					},
					"diagnostics": {
						"enable": true,
						"globals": ["hs", "vim", "it", "describe", "before_each", "after_each"]
					},
					"completion": {
						"keywordSnippet": "Enable"
					}
				}
			}
		},
		"dockerfile": {
			"command": "docker-langserver",
			"filetypes": ["dockerfile"],
			"args": ["--stdio"]
		},
		"bash": {
			"command": "bash-language-server",
			"args": ["start"],
			"filetypes": ["sh"]
		}
	},
	"clangd.enabled": true,
	"clangd.semanticHighlighting": true,
	"go.trace.server": "off",
	"rust-analyzer.trace.server": "off",
	"tsserver.trace.server": "off",
	"vimlsp.trace.server": "off",
	"java.trace.server": "off",
	"json.trace.server": "off",
	"xml.trace.server": "off",
	"html.trace.server": "off",
	"yaml.trace.server": "off",
	"css.trace.server": "off",
	"java.enabled": true,
	"java.codeGeneration.useBlocks": true,
	"java.import.maven.enabled": true,
	"java.maven.downloadSources": true,
	"go.goplsUseDaemon": false,
	"rust-analyzer.server.path": "rust-analyzer",
	"yaml.validate": true,
	"yaml.format.singleQuote": true,
	"yaml.completion": true,
	"snippets.enableStatusItem": false,
	"snippets.ultisnips.enable": false,
	"snippets.snipmate.enable": false,
	"diagnostic-languageserver.filetypes": {
		"sh": "shellcheck",
		"python": "pylint"
	}
}
