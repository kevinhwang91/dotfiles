{
	"coc.preferences.useQuickfixForLocations": false,
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
			"rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				},
				"highlight": {
					"lsRanges": true
				}
			}
		},
		"dockerfile": {
			"command": "docker-langserver",
			"filetypes": ["dockerfile"],
			"args": ["--stdio"]
		},
		"bash": {
			"command": "bash-language-server",
			"args": ["start"],
			"filetypes": ["sh"]
		}
	},
	"go.trace.server": "off",
	"rust-analyzer.trace.server": "off",
	"tsserver.trace.server": "off",
	"vimlsp.trace.server": "off",
	"java.trace.server": "off",
	"json.trace.server": "off",
	"xml.trace.server": "off",
	"html.trace.server": "off",
	"yaml.trace.server": "off",
	"css.trace.server": "off",
	"pyright.disableLanguageServices": false,
	"pyright.disableCompletion": false,
	"java.enabled": true,
	"java.codeGeneration.useBlocks": true,
	"java.import.maven.enabled": true,
	"java.maven.downloadSources": true,
	"go.goplsUseDaemon": false,
	"rust-analyzer.serverPath": "rust-analyzer",
	"yaml.validate": true,
	"yaml.format.singleQuote": true,
	"yaml.completion": true,
	"snippets.enableStatusItem": false,
	"diagnostic.enableHighlightLineNumber": false,
	"diagnostic-languageserver.filetypes": {
		"sh": "shellcheck",
		"python": "pylint"
	},
	"diagnostic-languageserver.linters": {
		"shellcheck": {
			"command": "shellcheck",
			"debounce": 100,
			"args": ["--format", "json", "-"],
			"sourceName": "shellcheck",
			"parseJson": {
				"line": "line",
				"column": "column",
				"endLine": "endLine",
				"endColumn": "endColumn",
				"message": "${message} [${code}]",
				"security": "level"
			},
			"securities": {
				"error": "error",
				"warning": "warning",
				"info": "info",
				"style": "hint"
			}
		},
		"pylint": {
			"sourceName": "pylint",
			"command": "pylint",
			"args": [
				"--output-format",
				"text",
				"--score",
				"no",
				"--msg-template",
				"'{line}:{column}:{category}:{msg} ({msg_id}:{symbol})'",
				"%file"
			],
			"formatPattern": [
				"^(\\d+?):(\\d+?):([a-z]+?):(.*)$",
				{
					"line": 1,
					"column": 2,
					"security": 3,
					"message": 4
				}
			],
			"rootPatterns": [".git", "pyproject.toml", "setup.py"],
			"securities": {
				"informational": "hint",
				"refactor": "info",
				"convention": "info",
				"warning": "warning",
				"error": "error",
				"fatal": "error"
			},
			"offsetColumn": 1,
			"formatLines": 1
		}
	}
}
