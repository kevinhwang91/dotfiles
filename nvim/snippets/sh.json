{
	"#!/usr/bin/env bash": {
		"prefix": "env",
		"body": ["#!/usr/bin/env bash", "$0"],
		"description": "Adds shebang line for bash."
	},
	"if": {
		"prefix": "if",
		"body": ["if [[ ${1:condition} ]]; then", "\t$0", "fi"],
		"description": "An if statement."
	},
	"else": {
		"prefix": "else",
		"body": ["else", "\t$0"],
		"description": "An else statement."
	},
	"elif": {
		"prefix": "elif",
		"body": ["elif [[ ${1:condition} ]]; then", "\t$0"],
		"description": "An elseif statement."
	},
	"elseif": {
		"prefix": "elseif",
		"body": ["elif [[ ${1:condition} ]]; then", "\t$0"],
		"description": "Another elseif statement."
	},
	"for": {
		"prefix": "for",
		"body": ["for (( ${1:i} = 0; $1 < ${2:length}; $1++)); do", "\t$0", "done"],
		"description": "An index-based iteration for loop."
	},
	"fori": {
		"prefix": "fori",
		"body": ["for ${1:var} in $${2:list}; do", "\t$0", "done"],
		"description": "for loop in list"
	},
	"while": {
		"prefix": "whi",
		"body": ["while [[ ${1:condition} ]]; do", "\t$0", "done"],
		"description": "while loop"
	},
	"function": {
		"prefix": "fun",
		"body": ["${1:funname}() {", "\t$0", "}"],
		"description": "Create an function"
	},
	"echo": {
		"prefix": "e",
		"body": ["echo $0"],
		"description": "echo command"
	}
}
